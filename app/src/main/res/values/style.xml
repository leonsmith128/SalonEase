<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style untuk tombol toggle -->
    <style name="ToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/toggle_button_background</item>
        <item name="android:textColor">@color/toggle_button_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style untuk tombol utama (login dan register) -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style untuk CardView transparan -->
    <style name="TransparentCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#80FFFFFF</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Style untuk TextInputLayout -->
    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="android:textColorHint">@color/secondary</item>
    </style>

</resources>