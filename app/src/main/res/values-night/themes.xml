<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme untuk mode night -->
    <style name="Theme.SalonEase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/black_dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/bg_dark</item>
        <!-- Font -->
        <item name="fontFamily">@font/sansation</item>
        <item name="android:fontFamily">@font/sansation</item>
    </style>
</resources>