<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Keadaan pressed - menggunakan warna primary -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <!-- Tambahkan corner radius jika dibutuhkan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Keadaan selected - menggunakan warna primary -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <!-- Tambahkan corner radius jika dibutuhkan -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Keadaan default (unselected) - menggunakan warna putih -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bt" />
            <stroke android:width="1dp" android:color="@color/primary"/>
            <!-- Tambahkan corner radius jika dibutuhkan -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>